                        @Html.LabelFor(m => m.ProductName)
                        @Html.TextBoxFor(m => m.ProductName, "", new { @class = "form-control", @placeholder = "Product Name" })
                        @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "badge badge-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductCategory)
                        @Html.TextBoxFor(m => m.ProductCategory, "", new { @class = "form-control", @placeholder = "Product Category" })
