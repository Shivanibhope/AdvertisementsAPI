@model AdvertisementsAPI.Models.Productdetail 

@{
    ViewData["Title"] = "AddProduct";
}
<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
        {
